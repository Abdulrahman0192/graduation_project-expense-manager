<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".MainActivity4">


    <EditText
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="280dp"
        android:background="@drawable/edit_text_enabled"

        android:drawablePadding="20dp"
        android:ems="4"
        android:gravity="right|top"
        android:hint=" تعديل الاسم"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="35dp"
        android:padding="10dp"
        android:textColor="#CC000000"
        android:textColorHint="#80000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">


    </EditText>

    <EditText
        android:id="@+id/salary"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="360dp"
        android:background="@drawable/edit_text_enabled"
        android:gravity="right|center"
        android:hint="تعديل الراتب"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="35dp"
        android:padding="10dp"
        android:textColor="#CC000000"
        android:textColorHint="#80000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </EditText>

    <Button
        android:id="@+id/submitting_btn"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/animated_btn"
        android:fontFamily="casual"
        android:text="تأكيد"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775">


    </Button>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/animated_btn"
        android:fontFamily="casual"
        android:text="العوده"
        android:textColor="#FAF8F8"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.817">


    </Button>

    <EditText
        android:id="@+id/exp_spending_sp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"

        android:layout_marginBottom="232dp"
        android:background="@drawable/edit_text_enabled"
        android:foregroundGravity="center"
        android:gravity="right|center"
        android:hint="تعديل الحد الشهري"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingRight="10dp"
        android:textColor="#CC000000"
        android:textColorHint="#80000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent">


    </EditText>


</androidx.constraintlayout.widget.ConstraintLayout>